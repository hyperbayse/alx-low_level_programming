CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all
all: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

.PHONY: re
re: oclean all

.PHONY: clean
clean:
	$(RM) -f *~ $(NAME)

.PHONY: oclean
oclean:
	$(RM) -f $(OBJ)

.PHONY: fclean
fclean: clean oclean